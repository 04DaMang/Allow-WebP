{
  "manifest_version": 3,
  "version": "0.0.2",
  "name": "project w",
  "description": "WIP",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html"
  }
}
